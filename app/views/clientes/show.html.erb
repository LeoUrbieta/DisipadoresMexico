<table class="table table-striped table-hover table-condensed table-bordered">
  <tr>
    <th>Id Venta</th>
    <th>Fecha</th>
    <th>Total Pagado</th>
  </tr>
  
  <% @cliente.ventas.each do |venta| %>
    <tr>
      <td><%= venta.id%></td>
      <td><%= venta.fecha %></td>
      <td><%= venta.total_pagado_por_cliente %></td>
      <td><%= link_to 'Ver esta venta', edit_venta_path(venta), class: 'btn btn-info' %></td>
    </tr>
  <% end %>
  
</table>

