<%= link_to 'Nueva Venta', new_venta_path, class: 'btn btn-primary' %>

<%= link_to 'Nuevo cliente', new_cliente_path, class: 'btn btn-success' %>

<br>
<div align="center">
  <%= will_paginate @ventas %>
</div>
<br>
<table class="table table-striped table-hover table-condensed table-bordered">
  <tr>
    <th>Fecha</th>
    <th>ID Cliente</th>
    <th>Cliente</th>
    <th>28mm</th>
    <th>87mm</th>
    <th>100mm</th>
    <th>125mm</th>
    <th>75mm negro</th>
    <th>230mm</th>
    <th>Sub-total</th>
    <th>Total de Productos</th>
    <th>Envío Explícito (pagado por el cliente)</th>
    <th>Dinero Añadido</th>
    <th>Total pagado por el Cliente</th>
    <th>Comisiones</th>
    <th>Comisiones envío</th>
    <th>Total post-comisiones</th>
    <th>Medio de Ventas</th>
    <th>¿Facturado?</th>
  </tr>

  <% @ventas.each do |venta| %>
    <tr>
      <td><%= venta.fecha %></td>
      <td><%= venta.cliente.id%></td>
      <td><%= link_to venta.cliente.nombre, cliente_path(venta.cliente)%></td>
      <td>Long: <strong><%= venta.longitud_28mm %></strong><br>Cortes: <strong><%= venta.cortes_28mm %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_28mm) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_28mm) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_28mm) %></strong></td>
      <td>Long: <strong><%= venta.longitud_87mm %></strong><br>Cortes: <strong><%= venta.cortes_87mm %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_87mm) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_87mm) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_87mm) %></strong></td>
      <td>Long: <strong><%= venta.longitud_100mm %></strong><br>Cortes: <strong><%= venta.cortes_100mm %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_100mm) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_100mm) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_100mm) %></strong></td>
      <td>Long: <strong><%= venta.longitud_125mm %></strong><br>Cortes: <strong><%= venta.cortes_125mm %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_125mm) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_125mm) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_125mm) %></strong></td>
      <td>Long: <strong><%= venta.longitud_75mm_negro %></strong><br>Cortes: <strong><%= venta.cortes_75mm_negro %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_75mm_negro) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_75mm_negro) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_75mm_negro) %></strong></td>
      <td>Long: <strong><%= venta.longitud_230mm %></strong><br>Cortes: <strong><%= venta.cortes_230mm %></strong><br>Costo/cm: <strong><%= number_to_currency(venta.costo_230mm) %></strong><br>Descuento: <strong><%= number_to_currency(venta.descuento_230mm) %></strong><br>Precio: <strong><%= number_to_currency(venta.precio_230mm) %></strong></td>
      <td><%= number_to_currency(venta.subtotal) %></td>
      <td><%= number_to_currency(venta.total_productos) %></td>
      <td><%= number_to_currency(venta.envio_explicito) %></td>
      <td><%= number_to_currency(venta.dinero_anadido)%></td>
      <td><%= number_to_currency(venta.total_pagado_por_cliente) %></td>
      <td><%= number_to_currency(venta.comisiones) %></td>
      <td><%= number_to_currency(venta.comision_envio) %></td>
      <td><%= number_to_currency(venta.total_post_comisiones) %></td>
      <td><%= venta.medio_de_venta %></td>
      <td><%= venta.facturado %></td>
      <!--<td><%= link_to 'Ver mas detalle', venta_path(venta), class: 'btn btn-info' %></td>-->
      <td><%= link_to 'Editar venta', edit_venta_path(venta), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Eliminar venta' , venta_path(venta), method: :delete, class: 'btn btn-danger' , data: { confirm: '¿Estás seguro de borrar esta venta?'}%></td>
    </tr>
  <% end %>

</table>

<div align="center">
  <%= will_paginate @ventas %>
</div>
