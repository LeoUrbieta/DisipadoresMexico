<h1>Calculadora por longitud</h1>

<hr/>

<div class="row">
    <div class="col-md-2">
      <%= label :producto, :numero, 'Producto' %><br>
      <%= select(:producto, :numero, nil,{},{:class => 'form-control', :id => 'tipo_producto'}) do %>
        <% if @precios.keys != nil %>
          <% @precios.keys.each do |c| %>
            <% if c.include? "longitud" %>
              <%= content_tag(:option,c,value: c) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :precio_unitario, 'Precio U.' %> <br>
      <%= text_field :producto, :precio_unitario, {:class => 'form-control', :readonly => 'readonly', :id => 'precio_unitario_calculadora'} %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :cantidad, 'Longitud' %> <br>
      <%= text_field :producto, :cantidad, {:class => 'form-control', :id => 'cantidad_calculadora'} %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :cortes, 'Cortes' %> <br>
      <%= text_field :producto, :cortes, {:class => 'form-control', :id => 'numero_cortes_calculadora'} %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :precio_sin_iva, 'Precio' %> <br>
      <%= text_field :producto, :precio_sin_iva, {:class => 'form-control', :id => 'precio_sin_iva', :readonly => 'readonly'} %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :iva, 'IVA' %> <br>
      <%= text_field :producto, :iva, {:class => 'form-control', :id => 'iva', :readonly => 'readonly'} %>
    </div>
    <div class="col-md-1">
      <%= label :producto, :precio_neto, 'Precio Neto' %> <br>
      <%= text_field :producto, :precio_neto, {:class => 'form-control', :id => 'precio_neto', :readonly => 'readonly'} %>
    </div>
</div>

<script type="text/javascript">

  var precios_calculadora = JSON.parse('<%= raw(@precios.to_json) %>'); 

</script>

