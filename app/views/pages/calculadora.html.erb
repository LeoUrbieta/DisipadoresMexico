<div class="container-fluid">
  <div class="row" id="clone_0">
      <div class="form-group col-md-12 col-xs-12">
        <%= label :producto, :numero, 'Producto' %><br>
        <%= select(:producto, :numero, nil,{},{:class => 'form-control lista_productos_calculadora', :id => 'tipo_producto_0'}) do %>
          <% if @precios.keys != nil %>
            <% @precios.keys.each do |c| %>
              <% if c.include? "longitud" %>
                <%= content_tag(:option,c,value: c) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :cantidad, 'Longitud por pieza' %> <br>
        <%= text_field :producto, :cantidad, {:class => 'form-control campo_usuario', :id => 'cantidad_calculadora_0', :type => 'number'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :piezas, 'Número de piezas' %> <br>
        <%= text_field :producto, :piezas, {:class => 'form-control campo_usuario', :id => 'numero_piezas_calculadora_0', :type => 'number'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :long_total, 'Long. total (con cortes)' %> <br>
        <%= text_field :producto, :long_total, {:class => 'form-control', :readonly => 'readonly', :id => 'longitud_total_calculadora_0'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :precio_unitario, '$/cm' %> <br>
        <%= text_field :producto, :precio_unitario, {:class => 'form-control', :readonly => 'readonly', :id => 'precio_unitario_calculadora_0'} %>
