      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :iva_precio_por_pieza, 'IVA' %> <br>
        <%= text_field :producto, :iva_precio_por_pieza, {:class => 'form-control', :readonly => 'readonly', :id => 'iva_precio_por_pieza_calculadora_0'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :precio_por_pieza_neto, '$/Pieza Neto' %> <br>
        <%= text_field :producto, :precio_por_pieza_neto, {:class => 'form-control', :readonly => 'readonly', :id => 'precio_por_pieza_neto_calculadora_0'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :precio_sin_iva, 'Sub-total' %> <br>
        <%= text_field :producto, :precio_sin_iva, {:class => 'form-control', :id => 'precio_sin_iva_0', :readonly => 'readonly'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :iva_renglon, 'IVA' %> <br>
        <%= text_field :producto, :iva_renglon, {:class => 'form-control', :id => 'iva_renglon_0', :readonly => 'readonly'} %>
      </div>
      <div class="form-group col-md-4 col-xs-4">
        <%= label :producto, :precio_neto, 'Precio Neto' %> <br>
        <%= text_field :producto, :precio_neto, {:class => 'form-control', :id => 'precio_neto_0', :readonly => 'readonly'} %>
      </div>
      <div class="form-group col-md-12 col-xs-12">
        <hr/>
      </div>
  </div>
</div>

