<h1>Bienvenido al software de Disipadores de Calor de Aluminio a Tu Medida</h1>

<%= link_to 'Ir a Ventas', ventas_path, class: "btn btn-info" %>

<h3>Ingresos en intervalo de Fecha</h3>
<p>
  <%= form_with url: pages_ingresos_path do |form| %>
  
    <p>
      <%= form.label(:fecha_inicial, "Fecha inicial: ") %> <br>
      <%= form.text_field :fecha_inicial, data:{ provide:'datepicker' }, :class => 'datepicker' %>
    </p>
    <p>
      <%= form.label(:fecha_inicial, "Fecha final: ") %> <br>
      <%= form.text_field :fecha_final, data:{ provide:'datepicker' }, :class => 'datepicker' %>
    </p>
    <p>
      <%= form.label(:facturado, "¿Facturado?") %>
      <%= form.select(:facturado, [[],['Si','true'],['No','false']]) %>
    </p>
    <p>
      <%= form.submit("Buscar") %>
    </p>
  <% end %>
</p>


<p>
  <h3>Ventas</h3>
  <table class="table-striped table-hover table-condensed table-bordered">
  <% if @ventas.blank? %>
    <tr>
      <td>Sin ventas por mostrar</td>
    </tr>
  <% else %>
    <tr>
      <th>Fecha</th>
      <th>Nombre de Cliente</th>
      <th>Monto de la Venta</th>
      <th>¿Facturado?</th>
    </tr>
  
    <% @ventas.each do |venta| %>
      <tr>
          <td><%= venta.fecha %></td>
          <td><%= venta.cliente.nombre %></td> 
          <td><%= venta.total_pagado_por_cliente%></td>
          <td><%= venta.facturado %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</p>


<p>
  <% if @claveSAT != nil %>
    <h3>Claves del SAT</h3>
    <table class="table-striped table-hover table-condensed table-bordered">
    <% @claveSAT.each do |clave| %>
      <tr>
        <td><%= clave.nombre_producto %></td>
        <td><%= clave.clave_sat %></td> 
      </tr>
    <% end %>
    </table>
  <% end %>  
</p>

<p>
  <% if @suma != nil %>
    <h3>Suma por producto (precio con IVA)</h3>
    <table class="table-striped table-hover table-condensed table-bordered">
    <% @suma.each do |nombre,suma| %>
      <tr>
        <td> <%="#{nombre.titleize}"%> </td>
        <td> <%="#{suma}"%> </td>
      </tr>
    <% end %>
    </table>
  <% end %>
</p>













                  