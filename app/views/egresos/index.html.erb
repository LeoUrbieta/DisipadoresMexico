<%= link_to 'Crear nuevo egreso', new_egreso_path, class: 'btn btn-primary' %>
<br>
<br>
<table class="table table-striped table-hover table-condensed table-bordered">
  <tr>
    <th>Fecha</th>
    <th>Descripcion</th>
    <th>Emisor</th>
    <th>Cantidad</th>
    <th>Notas adicionales</th>
  </tr>
  
  <% @egresos.each do |egreso| %>
    <tr>
      <td><%= egreso.fecha %></td>
      <td><%= egreso.descripcion %></td>
      <td><%= egreso.emisor %></td>
      <td><%= number_to_currency(egreso.cantidad) %></td>
      <td><%= egreso.notas_adicionales %></td>
      <!--<td><%= link_to 'Ver mas detalle', egreso_path(egreso), class: 'btn btn-info' %></td> -->
      <td><%= link_to 'Editar egreso', edit_egreso_path(egreso), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Eliminar egreso' , egreso_path(egreso), method: :delete, class: 'btn btn-danger' , data: { confirm: 'Are you sure?'}%></td>
    </tr>
  <% end %>
  
</table>